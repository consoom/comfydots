#!/bin/sh

# Prints the current volume.

case $BLOCK_BUTTON in
	1) xdotool key super+XF86_AudioMute ;;
	2) pamixer -t ;;
	4) pamixer -i 1 ;;
	5) pamixer -d 1 ;;
esac

[ $(pamixer --get-mute) = true ] && display  && exit

vol="$(pamixer --get-volume)"

if [ -z "$vol" ]; then
	sleep 3 && vol="$(pamixer --get-volume)"
fi
if [ "$vol" -gt "70" ]; then
	icon=""
elif [ "$vol" -lt "30" ]; then
	icon=""
else
	icon=""
fi

echo "$icon $vol%"
